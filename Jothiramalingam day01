<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple Form with Fieldset</title>
</head>
<body>

<form action="success.html" method="post" target="_blank">

    <fieldset>
        <legend>Personal Details</legend>

        <!-- Name -->
        <label>Name:</label><br>
        <input type="text" name="name" required><br><br>

        <!-- Password -->
        <label>Password:</label><br>
        <input type="password" name="password" required><br><br>

        <!-- Email -->
        <label>Email:</label><br>
        <input type="email" name="email" required><br><br>

        <!-- Age -->
        <label>Age:</label><br>
        <input type="number" name="age" min="1" required><br><br>

        <!-- Gender -->
        <label>Gender:</label><br>
        <input type="radio" name="gender" value="Male" required> Male
        <input type="radio" name="gender" value="Female"> Female<br><br>
   <label>Date of Birth:</label><br>
        <input type="date" name="dob" required><br><br>
    </fieldset>

    <br>

    <fieldset>
        <legend>Contact Details</legend>

        <!-- Country Code + Mobile -->
        <label>Mobile Number:</label><br>
        <select name="country_code" required>
            <option value="">Code</option>
            <option value="+91">+91 (India)</option>
            <option value="+1">+1 (USA)</option>
            <option value="+44">+44 (UK)</option>
        </select>

        <input type="tel" name="mobile" pattern="[0-9]{10}" placeholder="10 digit number" required>
        <br><br>

        <!-- Country -->
        <label>Country:</label><br>
        <select name="country" required>
            <option value="">--Select--</option>
            <option value="India">India</option>
            <option value="USA">USA</option>
            <option value="UK">UK</option>
        </select><br><br>

    </fieldset>

    <br>

    <fieldset>
        <legend>Skills</legend>

        <!-- Skills -->
        <input type="checkbox" name="skills[]" value="HTML" required> HTML
        <input type="checkbox" name="skills[]" value="CSS"> CSS
        <input type="checkbox" name="skills[]" value="JavaScript"> JavaScript

    </fieldset>

    <br>

    <!-- Submit -->
    <button type="submit">Submit</button>

</form>

</body>
</html>
